{
  "name": "foundational",
  "version": "1.0.0-dev",
  "description": "A simple CLI framework.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "LICENCE"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "regen-docs": "typedoc",
    "build": "npm run clean && npm run lint && npm test && tsc && npm run regen-docs || echo \"Build halted: Tests or lint failed\"",
    "format": "prettier --write src/*.ts",
    "lint": "eslint src/** tests/**",
    "test": "jest"
  },
  "author": "unwieldycat",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "typedoc": "^0.24.7"
  }
}